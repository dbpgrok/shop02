{
  "name": "shop02",
  "version": "1.0.0",
  "description": "Boutique musique sécurisée - Auto-génère tracks depuis assets/",
  "main": "auto-shop.js",
  "scripts": {
    "generate": "node auto-shop.js",
    "watch": "nodemon --watch assets --watch index.html --ext js,html auto-shop.js",
    "dev": "npm run watch",
    "test": "node auto-shop.js && echo '✅ Génération OK' && ls -la assets/*.mp3 | wc -l",
    "preview": "npm run generate && live-server --port=8080 --host=0.0.0.0"
  },
  "keywords": ["music", "shop", "mp3", "github-pages"],
  "author": "AI101MUSIC",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.1.4",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbpgrok/shop02.git"
  }
}
